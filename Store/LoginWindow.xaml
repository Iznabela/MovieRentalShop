<Window x:Class="Store.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        
        <!-- Column and row definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        
        <!-- App header -->
        <TextBlock Text="Movie App" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="0" FontSize="48" />
        
        <!-- Login -->
        <TextBlock Text="Login" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="1" Margin="20" FontSize="36"/>
        <TextBlock Text="Username:" Grid.Column="1" Grid.Row="3" Margin="30,10,0,0" VerticalAlignment="Top" FontSize="18" />
        <TextBox Name="UsernameField" Grid.Column="2" Grid.Row="3" Margin="0,10,0,0" Text="..." TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
        <TextBlock Text="Password:" Grid.Column="1" Grid.Row="4" Margin ="30,10,0,0" VerticalAlignment="Top" FontSize="18" />
        <TextBox Name="PasswordField" Grid.Column="2" Grid.Row="4" Margin="0,10,0,0" Text="..." TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Width="120" Height="25" />
        <Button x:Name="Login_Button" Click="LogIn_Click" Grid.Column="2" Grid.Row="5" Content="Log In" Margin="0,10,0,0" VerticalAlignment="Top" Background="BlanchedAlmond"/>
        
        <!-- Register -->
        <TextBlock Text="Not registered?" Grid.Column="3" Grid.Row="4" Margin="0,10,0,0" FontSize="24" HorizontalAlignment="Center"/>
        <Button x:Name="Register_Button" Click="Register_Click" Grid.Column="3" Grid.Row="5" Width="100" Content="Create Account" Margin="0,10,0,0" Background="BlanchedAlmond" />
    </Grid>
</Window>
