<Window x:Class="Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="840">
    <ScrollViewer>
        <Grid Name="MovieGrid" Background="White" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="160" />
                <RowDefinition Height="70" />
                <RowDefinition Height="160" />
                <RowDefinition Height="160" />
                <RowDefinition Height="160" />
                <RowDefinition Height="160" />
                <RowDefinition Height="160" />
                <RowDefinition Height="160" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <GroupBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="1"
                  Height="100" Width="500" BorderThickness="0" Margin="0,10,0,10">
                <StackPanel>
                    <Image Source="/Images/film-clipart-movie-premiere-12.png" 
                   Stretch="Uniform" />
                </StackPanel>
            </GroupBox>
            
            <!-- Menu -->
            <Button x:Name="homeButton" Grid.Row="2" Grid.Column="1"
                    Height="70" Width="70" Margin="10,0,80,0">
                <StackPanel>
                    <Image Source="C:\Users\isabe\source\repos\ProjektHyrfilm\Store\Images\—Pngtree—home icon_3568907.jpg" />
                </StackPanel>
            </Button>

        </Grid>
    </ScrollViewer>
</Window>
