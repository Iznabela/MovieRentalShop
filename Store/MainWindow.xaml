                                     VerticalAlignment="Center"
                                     Width="200"
                                     Height="30"
                                     Text="Search for Title"
                                     VerticalContentAlignment="Center"
                                     FontFamily="Segoe Script"
                                 Background="Black"
                                 Foreground="White"/>
                        <Button Name="search_Btn"
                                    Content="Search"
                                    FontFamily="Segoe Script"
                                    Height="30"
                                    Width="75"
                                    Click="search_Btn_Click"
                                Background="Black"
                                Foreground="White"/>

                    </StackPanel>
                </StackPanel>
            </Grid>

            <!--MainWindow in MainWindow for other windows-->
            <Grid
              Width="950"              
              x:Name="HomeWindow"
              Margin="100,100,20,20" >
            </Grid>
        </Grid>
    </Grid>
</Window>
